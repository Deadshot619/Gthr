<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gthr.gthrcollect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".GthrCollect"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/GthrCollectFullScreen">
        <activity android:name=".ui.termsandfaq.TermsAndFaqActivity"></activity>
        <activity android:name=".ui.settings.SettingsActivity" />
        <activity android:name=".ui.forgotpassword.ForgotPasswordActivity" />
        <activity android:name=".ui.homebottomnav.HomeBottomNavActivity" />
        <activity android:name=".ui.editaccountinfo.EditAccountInfoActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/GthrCollectFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.customcameraactivities.CustomCamera" />
        <activity android:name=".ui.customcameraactivities.ImagePreview" />
    </application>

</manifest>