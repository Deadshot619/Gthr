<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/margin_recent_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sale_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_extra_small"
            android:fontFamily="@font/lato"
            android:text="$100"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_extra_small" />

        <TextView
            android:layout_marginHorizontal="@dimen/margin_recent_sale"
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_extra_small"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/lato"
            android:text="06.22.2021"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_extra_small" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingHorizontal="@dimen/text_size_extra_small"
            android:gravity="center_vertical"
            android:id="@+id/ll_customization"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_glob"
                android:layout_width="@dimen/size_glob"
                android:layout_height="@dimen/size_glob"
                android:src="@drawable/ic_glob"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_glob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small_custom_product"
                android:text="Eng"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_extra_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_glob"
                app:layout_constraintTop_toTopOf="parent" />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_psa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_extra_small"
                android:text="PSA"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/line_glob"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_psa_value"
                android:layout_width="@dimen/width_recent_sale_psa_value"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small_custom_product"
                android:text="10"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/margin_extra_small"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_extra_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_psa"
                app:layout_constraintTop_toTopOf="parent" />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_foil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Promo"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_extra_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/line_psa"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>