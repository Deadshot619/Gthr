<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/edit_text_gray_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_phone_no"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hbb20.CountryCodePicker
        android:layout_marginVertical="@dimen/ccp_marginVertical"
        app:ccp_defaultNameCode="US"
        app:ccp_textSize="@dimen/text_size_medium"
        app:ccp_showFlag="false"
        app:ccp_showNameCode="false"
        android:layout_gravity="center_vertical"
        android:id="@+id/ccp"
        android:layout_marginLeft="@dimen/ccp_marginLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="@dimen/view_width"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginVertical="@dimen/margin_medium"/>


    <androidx.appcompat.widget.AppCompatEditText
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/et_phone_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:fontFamily="@font/lato"
        android:hint="@string/phone_no"
        android:inputType="phone"
        android:paddingHorizontal="@dimen/padding_normal"
        android:textColorHint="@color/hint_color"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>