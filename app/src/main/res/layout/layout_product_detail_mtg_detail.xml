                    app:layout_constraintBottom_toBottomOf="@+id/tv_legal_row1_collum2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_legal_row1_collum2"
                    app:layout_constraintTop_toTopOf="@+id/tv_legal_row1_collum2" />


                <TextView
                    android:id="@+id/tv_legal_row2_collum1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
