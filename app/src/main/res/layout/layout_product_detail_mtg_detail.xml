                    android:id="@+id/tv_legal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:paddingVertical="@dimen/padding_extra_small"
                    android:paddingStart="@dimen/padding_extra_large"
                    android:paddingEnd="@dimen/padding_normal"
                    android:text="@string/text_legal_product_detail"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/text_size_extra_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_legal_row1_collum1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:paddingVertical="@dimen/padding_extra_small"
                    android:paddingStart="@dimen/padding_extra_large"
                    android:paddingEnd="@dimen/padding_normal"
                    android:text="Pioneer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_extra_small"
                    app:layout_constraintEnd_toStartOf="@+id/tv_legal_row1_collum2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_legal" />

                <TextView
                    android:id="@+id/tv_legal_row1_collum2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_recipt_bottom"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:paddingVertical="@dimen/padding_extra_small"
                    android:paddingStart="@dimen/padding_extra_large"
                    android:paddingEnd="@dimen/padding_normal"
                    android:text="Pioneer"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/text_size_extra_small"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_legal_row1_collum1"
                    app:layout_constraintEnd_toStartOf="@+id/tv_legal_row1_collum3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_legal_row1_collum1"
                    app:layout_constraintTop_toTopOf="@+id/tv_legal_row1_collum1" />

                <TextView
                    android:id="@+id/tv_legal_row1_collum3"
